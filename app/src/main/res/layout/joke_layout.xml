<?xml version="1.0" encoding="utf-8"?>


<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/text_view_id"
        android:layout_width="267dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cust_item_background"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textSize="20sp" />
    <ImageButton
        android:id="@+id/shareButton_id"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:contentDescription="@string/shareButton"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintStart_toEndOf="@+id/text_view_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/favButton_id"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/favButton"
        app:layout_constraintStart_toEndOf="@+id/shareButton_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />


</merge>